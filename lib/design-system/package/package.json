{
  "private": true,
  "name": "@orchest/design-system",
  "version": "1.0.0",
  "author": "Orchest B.V.",
  "license": "AGPL-3.0-only",
  "main": "dist/index.js",
  "scripts": {
    "build": "concurrently -n w: npm:*:build",
    "dev": "concurrently -n w: npm:*:watch",
    "lint": "concurrently -n w: npm:*:check",
    "es:build": "esbuild src/index.ts --bundle --outdir=dist --format=esm --loader:.js=jsx --external:react*",
    "es:watch": "esbuild src/index.ts --bundle --outdir=dist --format=esm --loader:.js=jsx --external:react* --watch --log-level=error",
    "ts:build": "tsc --emitDeclarationOnly --outDir dist",
    "ts:watch": "tsc --emitDeclarationOnly --outDir dist -w",
    "ts:check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-id": "0.0.6",
    "@stitches/react": "0.1.9",
    "stitches-mixins": "0.2.1"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@stitches/core": "0.1.9",
    "@types/node": "15.0.1",
    "@types/react": "17.0.3",
    "concurrently": "6.0.2",
    "esbuild": "0.8.44",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "typescript": "4.2.4"
  }
}
